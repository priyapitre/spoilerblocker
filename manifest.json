{
    "manifest_version": 2,

    "name": "Block Spoilers",
    "version": "1.0",
    "author": "Priya Pitre",
    "description": "Don't let spoilers ruin your favorite shows. Add, delete and customize to your needs.",
    "icons": {
               "128":"128icon.png",
               "48":"48icon.png",
               "16":"16icon.png"
    },

    "background": {
        "scripts": ["background.js","hot-reload.js"],
        "persistent": false
    },

    "permissions": [
        "tabs", "http://*/*", "https://*/*", "storage"
    ],
    "browser_action": {
        "default_title" : "Block spoilers!",
        "default_icon": "128icon.png",
        "default_popup": "popup.html"
    }
}
